                                <li><a class="dropdown-item" href="#">Cerrar sesión</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        <div class="row d-flex justify-content-end align-items-center mt-4 row-cols-2 row-cols-md-6 row-cols-lg-8" style="height: 4rem;">
            <a href="" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modalUserSignUp">Registrar Usuario</a>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-12 table-responsive">
                <table class="table table-sm table-bordered table-dark table-hover caption-top">
                    <thead>
                        <caption>Usuarios</caption>
                        <tr>
                            <th>Id Usuario</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>3452</td>
                            <td>Sofía</td>
                            <td>Calle 60b # 54-78</td>
                            <td>3165476669</td>
                            <td>sofia@gmail.com</td>
                            <td>Activo/a</td>
                            <td>
                                <a href="" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalUpdateUser">Actualizar Información</a>
                                <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteUser">Eliminar</a>
                            </td>
                        </tr>
                        <tr>
                            <td>666</td>
                            <td>Aura</td>
                            <td>Carrera 45a # 11-99</td>
                            <td>3173344567</td>
                            <td>aura@gmail.com</td>
                            <td>Inactivo/a</td>
                            <td>
                                <a href="" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalUpdateUser">Actualizar Información</a>
                                <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalDeleteUser">Eliminar</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* MODALES: *@
    <!-- Registrar Usuario -->
    <div class="modal fade" id="modalUserSignUp" tabindex="-1" aria-labelledby="modalUserSignUpTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalUserSignUpTitle">Registrar usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container d-flex justify-content-center">
                        <form action="">
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="text" name="userName" id="userName" placeholder="Nombre" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="text" name="userAddress" id="userAddress" placeholder="Dirección" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="phone" name="userPhone" id="userPhone" placeholder="Teléfono" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="email" name="userEmail" id="userEmail" placeholder="Email" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <select name="userState" id="userState" class="form-control-sm">
                                        <option value="Active">Activo/a</option>
                                        <option value="Inactive">Inactivo/a</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Registrar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Actualizar usuario -->
    <div class="modal fade" id="modalUpdateUser" tabindex="-1" aria-labelledby="modalUpdateUserTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalUpdateUserTitle">Actualizar información</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container d-flex justify-content-center">
                        <form action="">
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="text" name="userNameUpdate" id="userNameUpdate" placeholder="Nombre" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="text" name="userAddressUpdate" id="userAddressUpdate" placeholder="Dirección" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="phone" name="userPhoneUpdate" id="userPhoneUpdate" placeholder="Teléfono" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <input type="email" name="userEmailUpdate" id="userEmailUpdate" placeholder="Email" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <select name="userStateUpdate" id="userStateUpdate" class="form-control-sm">
                                        <option value="Active">Activo/a</option>
                                        <option value="Inactive">Inactivo/a</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Eliminar usuario -->
    <div class="modal fade" id="modalDeleteUser" tabindex="-1" aria-labelledby="modalDeleteUserTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalDeleteUserTitle">Eliminar usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <p>¿Desea eliminar el usuario: <span>#Username</span>?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Eliminar usuario</button>
                </div>
            </div>
        </div>
    </div>
    
</div>